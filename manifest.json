{
  "name": "SSO privacy extension",
  "description": "A privacy extension that shows data requested with SSO logins.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "service_worker": "src/js/background.js"
  },
  "browser_action": {
    "default_popup": "src/popup.html#popup"
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "css": ["src/css/popup.css"],
        "js": ["src/js/identity-providers.js", "src/js/permissions-ui.js", "src/js/contentscript.js"]
      }
  ]
}
